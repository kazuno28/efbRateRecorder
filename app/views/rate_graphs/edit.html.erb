<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>
        <span class="text-white bg-secondary font-weight-bold">レート編集</span>
      </h4>
      <!--エラーメッセージ&編集フォーム-->
      <%= form_with model:@rate_graph, local:true do |f| %>
        <span class="text-danger">
          <% if @rate_graph.errors.any? %>
            <%= @rate_graph.errors.count %>errors prohibited this obj from being saved:
              <ul><%= @rate_graph.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              </ul>
            <% end %>
          <% end %>
        </span>
        <div class="form-group font-weight-bold">
          <%= f.label :before_rate, "試合前レート" %>
          <%= f.number_field :before_rate, autofocus:true, min: 0, max: 9999, required:"required", id:"inputBeforeRate" %>
        </div>
        <div class="form-group font-weight-bold">
          <%= f.label :after_rate, "試合後レート"%>
          <%= f.number_field :after_rate, autofocus:true, min: 0, max: 9999, required:"required", id:"inputAfterRate" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "戻る", rate_graphs_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>