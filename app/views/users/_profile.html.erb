<table class="table">
  <tr>
    <% if @user.image.attached? %>
      <%= image_tag @user.image.variant(resize:"100x100") %>
    <% else %>
      <%= image_tag 'PF-noimage.png' %>
    <% end %>
  </tr>
  <tr>
    <th class="small">ユーザー名 :</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th class="small">フォロー :</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th class="small">フォロワー :</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
</table>

<div class="row">
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info" %>
    <% end%>
  <% else %>
    <%= link_to "プロフィール編集", edit_user_path(user), class: "btn btn-outline-secondary" %>
  <% end %>
</div>