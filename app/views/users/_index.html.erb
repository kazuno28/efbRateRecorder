<table class='table table-hover table-inverse'>
  <thead class="text-white bg-secondary">
    <th></th>
    <th>ユーザー名</th>
    <th>フォロー</th>
    <th>フォロワー</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.image.variant(resize:"100x100") %></td>
        <td><%= user.name %></td>
        <td><%= user.followings.count %>フォロー</td>
        <td><%= user.followers.count %>フォロワー</td>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-danger'%>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-info'%>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'グラフを見る', user_path(user) %></td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>