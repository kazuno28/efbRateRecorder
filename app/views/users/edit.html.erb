<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>
        <span class="text-white bg-secondary font-weight-bold">プロフィール編集</span>
      </h4>
      <!--エラーメッセージ&編集フォーム-->
      <%= form_with model:@user, local:true do |f| %>
        <span class="text-danger">
          <% if @user.errors.any? %>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
              <ul><%= @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              </ul>
            <% end %>
          <% end %>
        </span>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像 :"%>
          <%= f.file_field :image, placeholder: "プロフィール画像" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "ユーザー名 :" %>
          <%= f.text_field :name, autofocus:true, id:"inputName" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "戻る", user_path(@user), class: "btn btn-secondary" %>
    </div>
  </div>
</div>