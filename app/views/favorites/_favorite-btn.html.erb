<% if rate_graph_comment.favorited_by?(current_user) %>
  <%= link_to rate_graph_comment.favorites.count, rate_graph_comment_favorites_path(rate_graph_comment), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to rate_graph_comment.favorites.count, rate_graph_comment_favorites_path(rate_graph_comment), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>