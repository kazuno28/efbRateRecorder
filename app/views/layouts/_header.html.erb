          <li><%= link_to 'About', home_about_path, class: 'fas fa-link nav-link text-warning' %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'fas fas fa-user-plus nav-link text-warning' %></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-warning' %></li>
        <% end %>
        </ul>
      </div>
    </div>
